{
  "name": "teamprompts-app",
  "version": "0.19.3",
  "description": "TeamPrompts - Help your team get on the same page.",
  "private": true,
  "dependencies": {
    "@amplitude/react-amplitude": "^1.0.0",
    "@devhammed/use-cookie": "^1.0.3",
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "@testing-library/react": "^9.3.2",
    "airtable": "^0.7.2",
    "amplitude-js": "^5.6.0",
    "classnames": "^2.2.6",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-ga": "^2.7.0",
    "react-input-autosize": "^2.2.2",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0",
    "react-test-renderer": "^16.12.0",
    "use-clipboard-copy": "^0.1.1"
  },
  "scripts": {
    "build": "react-scripts build",
    "build:styles": "postcss src/tailwind.css -o src/styles.css",
    "deploy": "gh-pages -d build",
    "eject": "react-scripts eject",
    "prebuild": "NODE_ENV=production yarn build:styles",
    "predeploy": "yarn build",
    "prestart": "yarn build:styles",
    "prettier": "prettier 'src/**/*.{css,js,json}'",
    "prettier:fix": "yarn prettier --write",
    "start": "react-scripts start",
    "test": "react-scripts test"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.7.1",
    "gh-pages": "^2.1.1",
    "postcss-cli": "^6.1.3",
    "prettier": "^1.19.1",
    "tailwindcss": "^1.1.3"
  },
  "homepage": "https://teamprompts.com",
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/hooks/useLocalStorage.js",
      "!src/index.js",
      "!src/initializeReactGA.js",
      "!src/serviceWorker.js",
      "!src/api/select.js",
      "!src/api/selectFitbs.js",
      "!src/api/selectTags.js"
    ]
  }
}
